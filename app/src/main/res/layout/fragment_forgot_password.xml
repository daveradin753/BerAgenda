<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ForgotPasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivbiru"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/bottom_card_corner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/app_logo"
            app:layout_constraintBottom_toBottomOf="@+id/ivbiru"
            app:layout_constraintEnd_toEndOf="@+id/ivbiru"
            app:layout_constraintStart_toStartOf="@+id/ivbiru"
            app:layout_constraintTop_toTopOf="@+id/ivbiru" />

        <TextView
            android:id="@+id/tvForgotYourPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/ruluko"
            android:text="Forgot Your Password?"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivbiru"
            app:layout_constraintEnd_toEndOf="@+id/ivbiru" />

        <TextView
            android:id="@+id/tvEnterYourRegisteredEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/ruluko"
            android:gravity="center"
            android:text="Enter your registered email below to receive \n the reset password link"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivbiru" />

        <EditText
            android:id="@+id/etForgotYourPasswordEmailUser"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:drawableStart="@drawable/icons8_email_48px"
            android:drawablePadding="18dp"
            android:hint="Email"
            android:inputType="text"
            android:imeOptions="actionDone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterYourRegisteredEmail" />

        <TextView
            android:id="@+id/tvRememberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="81dp"
            android:text="Remember Password?"
            app:layout_constraintBottom_toTopOf="@id/btnSendForgotYourPassword"
            app:layout_constraintEnd_toStartOf="@id/tvLoginForgotYourPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etForgotYourPasswordEmailUser" />

        <TextView
            android:id="@+id/tvLoginForgotYourPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="81dp"
            android:text="Login"
            android:textColor="#0278AE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvRememberPassword"
            app:layout_constraintTop_toBottomOf="@id/etForgotYourPasswordEmailUser" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendForgotYourPassword"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/signin_button_style"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRememberPassword" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>